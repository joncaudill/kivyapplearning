#:kivy 2.3.1

<GameScreen>:

    FloatLayout:
        pos: 0, 0
        size: root.width, root.height

        Label:
            text: 'i am a label'
            pos_hint: {'x': .1, 'y': .9}
            size_hint: .8, .1
            halign: 'left'
            text_size: self.size
            font_size: 50
            bold: True
            color: 0, 1, 0, 1
            

        GridLayout:
            cols: 2
            pos_hint: {'x': .3, 'y': .3}
            size_hint: None, None
            size: root.width * .4, root.width * .4

            Button:
                text: 'Button 1'
            Button:
                text: 'Button 2'
            Button:
                text: 'Button 3'            
            Button:
                text: 'Button 4'